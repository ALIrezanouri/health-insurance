{
  "extends": "@vue/tsconfig/tsconfig.json",
  "include": ["src/**/*", "src/**/*.vue"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "lib": ["ESNext", "DOM"],
    "composite": true,
    "noEmit": true,
    "isolatedModules": true
  },
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}